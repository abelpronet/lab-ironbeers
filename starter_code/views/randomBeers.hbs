<div class="container">
  <div class="row">
  {{#each randomBeer}}
    <div class="col-3">
    
    <img class="imgheight" src="{{this.image_url}}">
</div>

<div class="col-6">
    <h1>{{name}}</h1>
    <h3>{{tagline}}</h3>
    <p>{{description}}</p>
    <ul>

        <h3>Food Pairing</h3>

        {{#each food_pairing}}
            <li>{{this}}</li>
        {{/each}}

    </ul>
    <p><b>Brewers tips</b> {{this.brewers_tips}}</p>
</div>
  {{/each}}
  </div>
</div>